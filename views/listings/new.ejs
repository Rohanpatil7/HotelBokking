<% layout('/layouts/boilerplate') %>
<body>
    <div class="row">
        <div class="col-8 offset-2">

        
        <h3>Create New Listings</h3>
        <form action="/listings" method="post" novalidate class="needs-validation">
           
            <div>
                <label for="title" class="form-lable">Title</label>
                <input type="text" name="label[title]" placeholder="enter title" class="form-control" required >
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <br>
            <div>
                <label for="description" class="form-lable">Description</label>
                <textarea name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
                <div class="invalid-feedback">
                    require minimum 150 words of description.
                  </div>
            </div>
            <br>
            <div>
                <label for="image" class="form-lable">Image</label>
                <input name="listing[image]" placeholder="Enter image URl/LINK"  type="text" class="form-control">
                <div class="invalid-feedback">
                    URL of Image is require.
                  </div>
            </div>
            <br>
            <div class="row ">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-lable">Price</label>
                    <input name="listing[price]" placeholder="1200" type="number" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                <br>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-lable">Country</label>
                    <input name="listing[country]" placeholder="India"  type="text" class="form-control" required>
                    <div class="invalid-feedback">
                        Please provide a valid Country.
                      </div>
                </div>
            </div>
           
            <br>
            <div>
                <label for="location" class="form-lable">Location</label>
                <input name="listing[location]" placeholder="Kolhapur,Maharashtra"  type="text" class="form-control" required>
                <div class="invalid-feedback">
                    Please provide a valid zip code and landmark.
                  </div>
            </div>
            <br>
            
            <button type="submit" class=" btn btn-dark add-btn">Add</button>
        </form>
    </body>
    </div>
</div>
   
